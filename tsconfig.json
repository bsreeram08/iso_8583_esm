{
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "Preserve",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false,
    "noEmit": false,
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,
    "declaration": true,
    "outDir": "./lib",
    "strict": false,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "spec"],
  "esModuleInterop": true
}
